import java.util.Scanner;
public class runner {

	public static void main(String[] args) {
		// Write your code here
        Scanner s=new Scanner(System.in);
        int value=s.nextInt();
        for (int i=1;i<=value;i++){
            for (int j=value;j>=1;j--){
                if (j==i){
                    System.out.print("*");
                }
                else{
                    System.out.print(j);
                }
            }
            System.out.println();
        }
        

	}
}
